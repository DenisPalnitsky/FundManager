<Window x:Class="FundManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:viewModels="clr-namespace:FundManagerApp.ViewModels">
    <Window.DataContext>
        <viewModels:FundViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:NewStockViewModel}">
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding Price}" Width="100"/>
                <TextBox Text="{Binding Quanyity}" Width="100"/>                
                <Button Command="{Binding AddItem}">Add</Button>                
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto"  />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" >
            <Button Content="Add Equity" Margin="5" Width="100" Command="{Binding AddEquity}" />
            <Button Content="Add Bond"  Margin="5" Width="100" Command="{Binding AddBond}" />
        </StackPanel>

        <ContentPresenter DataContext="{Binding NewStockViewModel}"/>
        
        <DataGrid Grid.Row="2" DataContext="{Binding Stocks}"  AutoGenerateColumns="True" >
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="Name"                    
                    Binding="{Binding Name}" />

                <DataGridTextColumn 
                    Header="Price"                    
                    Binding="{Binding Price}" />

                <DataGridTextColumn 
                    Header="Quantity"                    
                    Binding="{Binding Quantity}" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
